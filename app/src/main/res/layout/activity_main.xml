<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView style="@style/MyTextView"
        android:id="@+id/textView_click_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="Upload Videos"
        android:textSize="18dp"
        android:clickable="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:drawableTop="@drawable/upload_to_cloud"
        android:textColor="#ffffff"/>
    <TextView style="@style/MyTextViewPink"
        android:id="@+id/textView_click_random"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Play Random Videos"
        android:textSize="18dp"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView_click_upload"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="5dp"
        android:drawableTop="@drawable/video_play"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:textColor="#fff"/>

</RelativeLayout>

</android.support.constraint.ConstraintLayout>