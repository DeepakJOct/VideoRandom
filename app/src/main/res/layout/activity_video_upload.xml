<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoUpload">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="-8dp"
            android:layout_height="200dp"
            android:src="@drawable/upload_to_server"/>

    <Button style="@style/DefaultButton"
        android:id="@+id/button_choose_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Choose Video File"
        android:textColor="@drawable/button_text_color"/>

    <TextView
        android:id="@+id/selected_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_choose_video"
        android:text="Selected Video URL"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button style="@style/DefaultButton"
        android:id="@+id/button_upload_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/selected_video"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Upload"
        android:textColor="@drawable/button_text_color"/>

        <TextView
            android:id="@+id/uploaded_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded Video URL"
            android:layout_alignTop="@id/button_upload_video"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>